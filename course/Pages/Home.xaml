<UserControl x:Class="course.Pages.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <StackPanel Margin="5" Orientation="Horizontal">
                    <TextBlock Text="Количество факторов первого уровня"/>
                    <TextBox Text="{Binding K1}"></TextBox>
                </StackPanel>
                <StackPanel Margin="5" Orientation="Horizontal">
                    <TextBlock Text="Количество факторов второго уровня"/>
                    <TextBox Text="{Binding K2}"></TextBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button Margin="10" Click="Load">Загрузить</Button>
                    <Button Margin="10" Click="Save">Сохранить</Button>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
